#
# Validates image files.
#
# shellcheck disable=SC1091,SC2034 # File not following, variable unused.
readonly \
	BASE_APP_VERSION=0.9.20250629 \
	BASE_MIN_VERSION=0.9.20231212
. base.sh
validate_cmd convert
[ "$#" -eq 1 ] || cya ival: try ival [user directory]
readonly DIR="$1"
isreadable "$DIR" || die Directory "$DIR" is not readable.
map_put cnt no 0
map_put cnt ok 0
find "$DIR" \
	\( \
	-name '*.[dD][nN][gG]' \
	-o \
	-name '*.[hH][eE][iI][cC]' \
	-o \
	-name '*.[jJ][pP][gG]' \
	-o \
	-name '*.[nN][eE][fF]' \
	-o \
	-name '*.[rR][aA][fF]' \
	\) \
	-type f |
	while read -r img; do
		if convert "$img" "$BASE_DIR_WIP/out.tiff" >/dev/null 2>&1; then
			cnt="$(map_get cnt ok)"
			cnt=$((cnt + 1))
			map_put cnt ok "$cnt"
			log ok: "$img".
		else
			cnt="$(map_get cnt no)"
			cnt=$((cnt + 1))
			map_put cnt no "$cnt"
			logw no: "$img".
		fi
	done
cnt="$(map_get cnt ok)"
[ "$cnt" -eq 0 ] || log Total successfully verified: "$cnt".
cnt="$(map_get cnt no)"
[ "$cnt" -eq 0 ] || log Total failed verifications: "$cnt".
