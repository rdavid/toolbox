#
# Validates image files.
#
# shellcheck disable=SC1091,SC2034 # File not following, variable unused.
readonly \
	BASE_APP_VERSION=0.9.20250625 \
	BASE_MIN_VERSION=0.9.20231212
. base.sh
validate_cmd convert
[ "$#" -eq 1 ] || cya ival: try ival [user directory]
readonly DIR="$1"
isreadable "$DIR" || die Directory "$DIR" is not readable.
map_put img cnt 0
find "$DIR" \
	\( \
	-name '*.[dD][nN][gG]' \
	-o \
	-name '*.[hH][eE][iI][cC]' \
	-o \
	-name '*.[jJ][pP][gG]' \
	-o \
	-name '*.[nN][eE][fF]' \
	-o \
	-name '*.[rR][aA][fF]' \
	\) \
	-type f |
	while read -r img; do
		convert "$img" "$BASE_DIR_WIP/img" >/dev/null 2>&1 || loge no: "$img".
		log ok: "$img".
		cnt="$(map_get img cnt)"
		cnt=$((cnt + 1))
		map_put img cnt "$cnt"
	done
log Total successfully verified: "$(map_get img cnt)".
