#!/bin/sh
# vi:et lbr noet sw=2 ts=2 tw=79 wrap
# Copyright 2019-2023 David Rabkin
# shellcheck disable=SC1091,SC2034 # File not following, variable unused.
readonly \
	BASE_APP_VERSION=0.9.20231109 \
	BASE_MIN_VERSION=0.9.20230312
. base.sh
[ "$#" -eq 1 ] || die Usage: flactomp3 filename.
readonly \
	SRC="$1" \
	TAG="$BASE_WIP"/tags
isreadable "$SRC" || die "$SRC" is not readable.
DST="$(printf %s "$SRC" | sed 's/\.flac/.mp3/')"
readonly DST
yes_to_continue Convert "$SRC" to "$DST"?
metaflac --export-tags-to=/dev/stdout "$SRC" |
	sed \
		-e 's/=/="/' \
		-e 's/$/"/' \
		-e 's/Album=/ALBUM=/' \
		-e 's/Genre=/GENRE=/' \
		-e 's/Artist=/ARTIST=/' >"$TAG"
cat "$TAG"

# shellcheck source=/dev/null
. "$TAG"
rm "$TAG"
flac -dc "$SRC" |
	lame \
		-b 320 \
		-h \
		--ta "${ARTIST}" \
		--tg "${GENRE}" \
		--tl "${ALBUM}" \
		--tn "${TRACKNUMBER}" \
		--tt "${TITLE}" \
		--ty "${DATE}" \
		--add-id3v2 /dev/stdin "$DST"
